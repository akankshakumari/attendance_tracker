<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/username"
            android:hint="Enter Your Email" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Enter Your Pass Code" app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:text="OBLIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="36sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp" android:textStyle="bold"/>
    <TextView
            android:text="Attendance Tracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="36sp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="77dp"/>
    <Button
            android:text="Login"
            android:layout_width="380dp"
            android:layout_height="67dp" android:id="@+id/loginButton"
            android:textStyle="bold" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/password" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
